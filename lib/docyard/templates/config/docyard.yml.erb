# Docyard Configuration
# Documentation: https://github.com/yourusername/docyard

# Site Identity
title: "My Documentation"
description: "Documentation for my project"

# Branding (Optional)
# If you set a logo, only the logo will be shown in the header.
# If no logo is set, the title text will be shown instead.
# branding:
#   logo: "logo.svg"           # Your logo (auto-detects logo-dark.svg for dark mode)
#   favicon: "favicon.ico"     # Browser tab icon
#   credits: true              # Show "Built with Docyard" link

# Social Links (Optional)
# These appear in the footer
# socials:
#   github: https://github.com/user/repo
#   twitter: https://twitter.com/handle

# Tab Navigation (Optional)
# Use tabs to organize large documentation into sections
# tabs:
#   - text: Guide
#     href: /guide
#   - text: API Reference
#     href: /api
#   - text: Blog
#     href: https://blog.example.com
#     external: true

# Search Configuration
# search:
#   enabled: true
#   placeholder: "Search documentation..."
#   exclude:
#     - /drafts/*

# Build Configuration
build:
  output: "dist"      # Output directory for static files
  base: "/"           # Base URL for deployment (e.g., "/docs/" for subdirectory)
